# -*- mode: snippet -*-
# key: dinst
# name: define-inst
# --
(bind-func ${1:name}_note_c
  (lambda (nargs:i64 dargs:SAMPLE*)
    (lambda (time:i64 chan:i64 freq:SAMPLE amp:SAMPLE)
      $0)))

(bind-func $1_fx
  (lambda (in:SAMPLE time:i64 chan:i64 dat:SAMPLE*)
    in))

(define-instrument $1 $1_note_c $1_fx)
(ipc:bind-func "${2:utility}" '$1)

($1.attack 200.0)
($1.decay 200.0)
($1.sustain 0.6)
($1.release 1000.0)
